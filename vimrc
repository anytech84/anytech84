" VIM GENERAL SETTINGS
set nocompatible
set nobackup

" FILETYPE OPTIONS
filetype on
filetype indent on

" APPEARANCE SETTINGS
syntax on
set number
set title
set cursorline
set cursorcolumn
set ruler

" INDENTATION SETTINGS
set shiftwidth=4
set tabstop=4
set expandtab

" MISC SETTINGS
set belloff=all
set clipboard=unnamed
set mouse=a

" ACTIONS SETTINGS
set showcmd
set showmode

" SEARCH SETTINGS
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

" COMPLETION SETTINGS
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
